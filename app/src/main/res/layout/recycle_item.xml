<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/book_height"
    android:layout_marginStart="10dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/shape_book">

    <com.qmuiteam.qmui.widget.QMUIRadiusImageView2
        android:id="@+id/img_recycle"
        android:layout_width="@dimen/img_width"
        android:layout_height="@dimen/img_height"
        android:scaleType="fitXY"
        app:qmui_radiusTopRight="10dp"
        app:qmui_radiusTopLeft="10dp"
        android:src="@drawable/img_2" />

    <TextView
        android:id="@+id/tv_book_name"
        android:layout_width="@dimen/text_width"
        android:layout_height="@dimen/text_height"
        android:layout_below="@+id/img_recycle"
        android:gravity="center_vertical|bottom"
        android:layout_marginTop="2dp"
        android:layout_marginStart="6dp"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_book_state"
        android:layout_width="@dimen/text_width"
        android:layout_height="@dimen/text_height"
        android:layout_below="@+id/tv_book_name"
        android:layout_marginStart="6dp"
        android:gravity="center_vertical|top"
        android:textColor="@color/grey"
        android:textSize="11sp" />

</RelativeLayout>