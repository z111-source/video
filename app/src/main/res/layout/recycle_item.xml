<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/shape_book">

    <com.qmuiteam.qmui.widget.QMUIRadiusImageView2
        android:id="@+id/img_recycle"
        android:layout_width="@dimen/img_width"
        android:layout_height="@dimen/img_height"
        android:scaleType="fitXY"
        app:qmui_radiusTopLeft="10dp"
        app:qmui_radiusTopRight="10dp" />

    <TextView
        android:id="@+id/tv_book_name"
        android:layout_width="@dimen/text_width"
        android:layout_height="@dimen/text_height"
        android:layout_below="@+id/img_recycle"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_book_state"
        android:layout_width="@dimen/text_width"
        android:layout_height="@dimen/text_height"
        android:layout_below="@+id/tv_book_name"
        android:layout_marginStart="9dp"
        android:gravity="center_vertical|top"
        android:textColor="@color/grey"
        android:textSize="11sp" />

</RelativeLayout>